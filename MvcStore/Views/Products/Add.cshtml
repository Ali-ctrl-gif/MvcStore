@model MvcStore.Models.Product

<form action="Add" method="post">
    <div class="form-group mb-5">
        <label class="mb-3">نام محصول</label>
        <input asp-for="Name" class="form-control"/>
    </div>
    <div class="form-group mb-5">
        <label class="mb-3">نوع محصول</label>
        <input asp-for="Type" class="form-control" />
    </div>
    <div class="form-group mb-5">
        <label class="mb-3">قیمت محصول</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group mb-5">
        <label class="mb-3">تعداد محصول</label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success mt-2">ذخیره</button>
</form>
